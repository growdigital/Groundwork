<!doctype html>
<html lang="{{ site.lang }}">
{{> head}}

<body class="no-js {{ path }}">
  {{> header}}
  <div class="wrapper">
    <main role="main">
      {{{ contents }}} {{#if blogIndex}} {{> list-blog}} {{/if}} {{#if statusIndex}} {{> list-status}} {{/if}}
      <hr>
    </main>
    {{> aside}}
  </div>
  {{> footer}}
  <script src="/assets/scripts.js"></script>
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>

</html>