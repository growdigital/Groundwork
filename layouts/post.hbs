<!doctype html>
<html lang="{{ site.lang }}">
{{> head}}

<body class="no-js post">
  {{> header}}
  <div class="wrapper">
    <article class="post" itemscope itemtype="https://schema.org/Article">
      {{> microformats-schema}}
      <h1>{{ title }}</h1>
      <time pubdate itemprop="datePublished">{{ date }}</time>
      {{{ contents }}}
    </article>
  </div>
  {{> footer}}
  <script src="/assets/scripts.js"></script>
</body>

</html>